@model VMS.ViewModels.EmailConfigViewModel
@{
    ViewData["Title"] = "CredentialsManagers";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}



<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Api Settings</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Email Settings</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="col-md-12">
    <!-- general form elements -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Set ApiKey</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <div>
            <form action="@Url.Action("CredentialsManagers","Setting")" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card-body">

                    <div class="form-group">
                        <label asp-for="ApiKey"></label>
                        <input asp-for="ApiKey" id="visitingEmployee" class="form-control" placeholder="Enter Api Value" value="@Model.ApiKey">
                        <span asp-validation-for="ApiKey" class="text-danger"></span>
                    </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <div class="row">
                        <button type="submit" class="btn btn-primary col-md-12" style="margin: 0 auto;">
                            Change
                        </button>
                    </div>
                </div>
            </form>


        </div>
    </div>
    <!-- /.card -->

</div>


